{
    "name": "ReTorn",
    "version": "1.0.0",
    "description": "Its the return of a great Torn extension",
    "manifest_version": 3,
    "icons": {
      "16": "images/ReTorn@16px.png",
      "32": "images/ReTorn@32px.png",
      "48": "images/ReTorn@48px.png",
      "64": "images/ReTorn@64px.png",
      "96": "images/ReTorn@96px.png",
      "128": "images/ReTorn@128px.png"
    },
    "action": {
      "default_title": "ReTorn",
      "default_popup": "pages/popup_start.html",
      "default_title": "ReTorn: Torn Browser Extension"
    },
    "permissions": [
      "management",
      "notifications",
      "storage",
      "background",
      "alarms"
    ],
    "host_permissions": [
      "https://www.torn.com/*",
      "https://api.torn.com/*",
      "https://beta.tornstats.com/*"
    ],
    "options_ui": {
  		"page": "/pages/options.html",
  		"open_in_tab": true
  	},
    "options_page": "/pages/options.html",
    "background": {
    	"service_worker": "background.js"
  	},
    "content_scripts": [
      {
        "matches": [
          "https://www.torn.com/*"
        ],
        "exclude_matches": [
                "https://www.torn.com/api.html*",
                "https://wiki.torn.com/*"
            ],
        "css": ["css/everywhere.css"],
        "js": ["js/lib/jquery-3.6.0.min.js","js/everywhere/retorn.js","js/everywhere/mini-profiles.js","js/everywhere/easteregg.js","js/everywhere/chat.js"],
        "run_at": "document_start"
      },
      {
        "matches": ["https://www.torn.com/api.html*"],
        "js": ["js/lib/jquery-3.6.0.min.js","js/api/api.js"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/stockexchange.php?step=portfolio"],
        "js": ["js/stockexchange/portfolio.js"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/stockexchange.php"],
        "js": ["js/stockexchange/stockexchange.js"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/page.php?sid=stocks"],
        "js": ["js/stockexchange/stocks.js"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/index.php"],
        "js": ["js/home/index.js"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/gym.php"],
        "js": ["js/lib/highcharts.js", "js/gym/gym.js"],
        "css": ["css/gym/gym.css"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/crimes.php*"],
        "js": ["js/crimes/crimes.js"],
        "css": ["css/crimes/crimes.css"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/jailview.php*"],
        "js": ["js/jail/jail.js"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/preferences.php*"],
        "js": ["js/preferences/preferences.js"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/city.php*"],
        "js": ["js/city/city.js"],
        "css": ["css/city/city.css"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/profiles.php*"],
        "js": ["js/profiles/profiles.js"],
        "css": ["css/profiles/profiles.css"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/profiles.php?XID=1468764"],
        "js": ["js/profiles/heasleys4hemp.js"],
        "run_at": "document_end"
      }
    ]

  }
