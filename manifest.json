{
    "name": "ReTorn",
    "version": "0.0.6",
    "description": "Its the return of a great Torn extension",
    "manifest_version": 3,
    "icons": {
      "16": "images/ReTorn@16px.png",
      "32": "images/ReTorn@32px.png",
      "48": "images/ReTorn@48px.png",
      "64": "images/ReTorn@64px.png",
      "96": "images/ReTorn@96px.png",
      "128": "images/ReTorn@128px.png"
    },
    "action": {
      "default_title": "ReTorn",
      "default_popup": "pages/popup_start.html"
    },
    "permissions": [
      "management",
      "notifications",
      "storage",
      "background",
      "alarms",
      "webRequest"
    ],
    "host_permissions": [
      "https://www.torn.com/*",
      "https://api.torn.com/*",
      "https://www.tornstats.com/*"
    ],
    "options_ui": {
  		"page": "/pages/options.html",
  		"open_in_tab": true
  	},
    "options_page": "/pages/options.html",
    "background": {
    	"service_worker": "background.js"
  	},
    "web_accessible_resources": [
      {
        "resources": [ "/js/everywhere/interceptFetch.js", "/js/everywhere/torn3d.js" ],
        "matches": [ "https://www.torn.com/*" ]
      }
    ],
    "content_scripts": [
      {
        "matches": [
          "https://www.torn.com/*"
        ],
        "exclude_matches": [
                "https://www.torn.com/api.html*",
                "https://wiki.torn.com/*"
            ],
        "css": ["css/everywhere/everywhere.css", "css/everywhere/npclist.css"],
        "js": ["js/lib/jquery-3.6.0.min.js","js/everywhere/retorn.js","js/everywhere/chat.js", "js/everywhere/npclist.js", "js/everywhere/tornstats.js"],
        "run_at": "document_start"
      },
      {
        "matches": ["https://www.torn.com/api.html*"],
        "js": ["js/lib/jquery-3.6.0.min.js","js/api/api.js"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/page.php?sid=stocks"],
        "js": ["js/stocks/stocks.js"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/index.php"],
        "js": ["js/home/index.js"],
        "css": ["css/home/index.css"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/gym.php"],
        "js": ["js/lib/highcharts.js", "js/gym/gym.js"],
        "css": ["css/gym/gym.css"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/crimes.php*"],
        "js": ["js/crimes/crimes.js"],
        "css": ["css/crimes/crimes.css"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/item.php*"],
        "js": ["js/item/item.js"],
        "css": ["css/item/item.css"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/jailview.php*"],
        "js": ["js/jail/jail.js"],
        "css": ["css/jail/jail.css"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/preferences.php*"],
        "js": ["js/preferences/preferences.js"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/city.php*"],
        "js": ["js/city/city.js"],
        "css": ["css/city/city.css"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/profiles.php*"],
        "js": ["js/profiles/profiles.js"],
        "css": ["css/profiles/profiles.css"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/profiles.php?XID=1468764", "https://www.torn.com/profiles.php?NID=Heasleys4hemp"],
        "js": ["js/profiles/heasleys4hemp.js"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/factions.php?step=your*"],
        "js": ["js/factions/factions.js"],
        "css": ["css/factions/factions.css"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.torn.com/loader.php?sid=attack*"],
        "js": ["js/loader/attack/npc.js"],
        "run_at": "document_end"
      }
    ]

  }
